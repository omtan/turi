<% content_for :page_title do %>
    <%=t('trip_add_route')%>
<% end %>

<% content_for :content_header do %>
    <div class="content-header">
      <div class="row">
        <div class="col-sm-12">
          <div class="header-section">
            <h1><%= yield :page_title %></h1>
          </div>
        </div>
      </div>
    </div>
<% end %>

<% content_for :page_stylesheets do %>
    <link rel="stylesheet" type="text/css" href="http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.css" />
<% end %>

<% content_for :page_scripts do %>
    <script type='text/javascript' src='http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.js?2'></script>

    <%= render 'routes/map' %>

    <%= render 'routes/map_control' %>

    <%= render 'routes/create_gui' %>
<% end %>

<div class="col-lg-8">
  <div class="widget">
    <div class="widget-content" >

      <div id="map" style="width: 100%; height: 440px; border: 1px solid #AAA;"></div>
      <br> </br>

      <!--FIXME use locales-->

      <%= form_for [@trip, @route], html: {class:'form-horizontal form-bordered'} do |f| %>
          <%= f.label :title, 'Route Title' %>
          <%= f.text_field :title %> <br> </br>
          <%= f.label :desc, 'Route Description' %>
          <%= f.text_area :desc %>

        <ul id="waypoint-list">
           <!--<%= render 'waypoint_fields' %>-->
        </ul>

        <div>
              <%= f.submit 'Save Route', class: 'btn btn-primary', data: { no_turbolink: true }%>

        </div>

      <% end %>


    </div>
  </div>
</div>

