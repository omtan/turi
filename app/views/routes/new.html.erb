<% content_for :page_title do %>
    <%=t('trip_add_route')%>
<% end %>

<% content_for :content_header do %>
    <div class="content-header">
      <div class="row">
        <div class="col-sm-12">
          <div class="header-section">
            <h1><%= yield :page_title %></h1>
          </div>
        </div>
      </div>
    </div>
<% end %>

<% content_for :page_scripts do %>
    <script>
        $(function () {
            <%= render 'routes/map' %>

            <%= render 'routes/map_control' %>

            <%= render 'routes/create_gui' %>
        });
    </script>
<% end %>

<div class="row">
    <div class="col-lg-12">
      <div class="block">
        <div class="block-content" >
            <div id="map" style="width: 100%; height: 600px; border: 1px solid #AAA;"></div>
        </div>
      </div>
    </div>


    <div class="col-lg-12">
      <div class="block">
        <div class="block-content">
          <div class="row">

            <%= form_for [@trip, @route], html: {class:'form-horizontal form-bordered'} do |f| %>

              <div class="col-lg-6">
                <div class="form-group">
                    <%= f.text_field :title, :value => t('trip_route_route_title') %> <br>
                    <%= f.text_area :desc, :value => t('trip_route_route_desc') %> <br>
                    

                    <!-- not implemented yet 
                    <%= f.label :public, class: 'control-label' %>
                    <label class="switch switch-success"><%= f.check_box :public %><span></span></label> <br>
                    -->

                    <%= f.submit t('trip_route_route_save'), class: 'btn btn-primary', data: { no_turbolink: true }%>
                </div>
              </div>

              <div class="col-lg-6">
                <ul id="waypoint-list"></ul>
              </div>

            <% end %>

          </div>
        </div>
      </div>
    </div>
</div>





