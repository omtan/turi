<% content_for :page_title do %>
    <%=t('trip_add_route')%>
<% end %>

<% content_for :content_header do %>
    <div class="content-header">
      <div class="row">
        <div class="col-sm-12">
          <div class="header-section">
            <h1><%= yield :page_title %></h1>
          </div>
        </div>
      </div>
    </div>
<% end %>

<% content_for :page_scripts do %>
    <script>
        $(function () {
            <%= render 'routes/map' %>

            <%= render 'routes/map_control' %>

            <%= render 'routes/create_gui' %>
        });
    </script>
<% end %>

<%= form_for [@trip, @route] do |f| %>

    <div class="row">

      <div class="col-lg-12">
        <div id="map" style="width: 100%; height: 600px; border: 1px solid #AAA;"></div>
        <br/>
      </div>

      <div class="col-lg-4">
        <div class="block">
          <div class="block-content">
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, :value => t('trip_route_route_title'), class: 'form-control' %> <br>
            </div>

            <div class="form-group">
              <%= f.label :desc %>
              <%= f.text_area :desc, :value => t('trip_route_route_desc'), class: 'form-control' %> <br>
            </div>

            <div class="form-group form-actions">
              <%= f.submit t('trip_route_route_save'), class: 'btn btn-effect-ripple btn-primary', data: { no_turbolink: true }%>
            </div>

          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <ul id="waypoint-list"></ul>
      </div>

    </div>

<% end %>


