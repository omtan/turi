<tr>
  <td class="text-center"><a href="<%= user_path(comment.user) %>"><strong><%= comment.user.name %></strong></a></td>
  <td><em><%= t 'distance_ago', distance: distance_of_time_in_words(Time.now - comment.updated_at)%></em></td>
</tr>
<tr>
  <td class="text-center" style="width: 12%;">
    <div class="push-bit">
      <%= link_to image_tag(comment.user.gravatar_url(size: 64), class: 'img-circle'), user_path(comment.user) %>
    </div>
  </td>
  <td>
    <p><%= comment.body %></p>
  </td>
</tr>