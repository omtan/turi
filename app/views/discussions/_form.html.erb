<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
    <!-- Discussion Form -->
    <div class="block">
      <div class="block-title">
        <h2><%=t('trip_discussions_form', trip_title: @trip.title)%></h2>
      </div>
      <%= form_for [@trip, @discussion], html: {class: 'form-horizontal form-bordered'} do |f| %>

          <div class="<%= form_group_class @discussion, :title%>">
            <%= f.label :title, class: 'col-md-3 control-label' %>
            <div class="col-md-9">
              <%= f.text_field :title, class: 'form-control'%>
              <%= form_group_errors @discussion, :title %>
            </div>
          </div>

          <div class="<%= form_group_class @discussion, :body %>">
            <%= f.label :body, class: 'col-md-3 control-label' %>
            <div class="col-md-9">
              <%= f.text_area :body, class: 'form-control' %>
              <%= form_group_errors @discussion, :body %>
            </div>
          </div>

          <div class="form-group form-actions">
            <div class="col-md-9 col-md-offset-3">
              <%= f.submit t('save'), class: 'btn bt-effect-ripple, btn-primary', id: 'save-discussion-btn' %>
              <% if action_name == 'edit' %>
                  <%= link_to t('cancel'), trip_discussion_path(@trip, @discussion), id: 'cancel-save-discussion-btn', class: 'btn btn-effect-ripple btn-danger' %>
              <% else %>
                  <%= link_to t('cancel'), trip_discussions_path, id: 'cancel-save-discussion-btn', class: 'btn btn-effect-ripple btn-danger' %>
              <% end %>
            </div>
          </div>

      <% end %>

    </div>
  </div>
</div>

